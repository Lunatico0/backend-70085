<h1 class="text-3xl text-center font-bold text-blue-600 my-6">Contacto</h1>

<div class="flex justify-center">
  <form action="/contact/sendmessage" class="w-full max-w-md p-6 bg-white rounded-lg shadow-md" method="post">
    <div class="mb-4">
      <label for="email" class="block text-lg font-medium text-gray-700 mb-2">Email:</label>
      <input type="email" id="email" name="email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" placeholder="correo@ejemplo.com" required>
    </div>

    <div class="mb-4">
      <label for="name" class="block text-lg font-medium text-gray-700 mb-2">Nombre:</label>
      <input type="text" id="name" name="name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" placeholder="John Doe" required>
    </div>

    <div class="mb-4">
      <label for="subject" class="block text-lg font-medium text-gray-700 mb-2">Asunto:</label>
      <input type="text" id="subject" name="subject" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent" placeholder="Consulta" required>
    </div>

    <div class="mb-4">
      <label for="message" class="block text-lg font-medium text-gray-700 mb-2">Mensaje:</label>
      <textarea id="message" name="message" class="w-full h-32 px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-400 focus:border-transparent resize-none" placeholder="Escriba su mensaje aquÃ­..." required></textarea>
    </div>

    <div class="flex justify-center">
      <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition ease-in-out duration-150">
        Enviar Mensaje
      </button>
    </div>
  </form>
</div>
