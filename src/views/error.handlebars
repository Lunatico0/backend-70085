<section
  class="error-container bg-slate-800 text-white rounded-lg p-8 max-w-xl mx-auto my-auto shadow-lg flex flex-col items-center">
  <h1 class="text-4xl font-extrabold text-indigo-400 mb-4 text-center">{{title}}</h1>
  <p class="text-lg mb-6 text-center">{{message}}</p>

  {{#if description}}
  <p class="text-base text-gray-300 mb-4">{{description}}</p>
  {{/if}}

  <div class="flex justify-between gap-4 mt-4">
    {{#each buttons}}
    <form action="{{this.href}}" method="{{#if this.method}}{{this.method}}{{else}}GET{{/if}}">
      <button type="submit"
        class="bg-indigo-500 text-white py-2 px-4 rounded-lg hover:bg-indigo-600 active:bg-indigo-400 transition duration-300 ease-in-out font-bold">
        {{this.text}}
      </button>
    </form>
    {{/each}}
  </div>
</section>
